	public function getCharge($id){
		$res = null;
		try{
			$this->connexion();
		}catch (ConnexionException $e){
			print($e->afficher());
		}
		try{
			$charge = $this->connexion->prepare('SELECT * FROM Charge WHERE id = ?');
			$charge->execute(array($id));
			if($tabCharge = $charge->fetch()){
				$res = new Charge(
						$tabCharge['id'],
						$tabCharge['id_escale'],
						$tabCharge['id_cont'],
						$tabCharge['decharge']
				};
		}
		}catch (TableAccesException $e){
			print($e->afficher());
		}
		$this->deconnexion();
